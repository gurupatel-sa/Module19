<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/camera_example"
            android:id="@+id/launchCameraExample"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/camerax_example"
            android:id="@+id/launchCameraxExample"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/gyroscope_example"
            android:id="@+id/gyroscopeExample"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/proximity_example"
            android:id="@+id/proxmityExample"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Light Example"
            android:id="@+id/lightExample"
    />

</LinearLayout>